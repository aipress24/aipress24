<section aria-labelledby="contacts">
  <div class="rounded-lg bg-white overflow-hidden shadow">
    <div class="p-6">
      <h2 class="text-base font-medium text-gray-900" id="contacts">Parmi ses contacts</h2>

      <div class="flow-root mt-6">
        <ul role="list" class="-my-5 divide-y divide-gray-200">
          {% for follower in followers_sample %}
            <li class="py-4">
              <div class="flex items-center space-x-2">
                <div class="flex-shrink-0">
                  {{ profile_image(follower, size=8) }}
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    <a href="{{ url_for(follower) }}">{{ follower.full_name }}</a>
                  </p>
                  <p class="text-sm text-gray-500 truncate">
                    {{ follower.job_title }}
                    {% if follower.organisation %}
                      <a href="{{ url_for(follower.organisation) }}">@{{ follower.organisation.name }}</a>
                    {% else %}
                      @{{ follower.profile.organisation_name }}
                    {% endif %}
                  </p>
                </div>
                <div>
                  <a href="{{ url_for(follower) }}"
                     class="inline-flex items-center shadow-sm px-2.5 py-0.5 border border-gray-300 text-sm leading-5 font-medium rounded-full text-gray-700 bg-white hover:bg-gray-50">
                    Voir
                  </a>
                </div>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="mt-6">
        <a href="?tab=followees"
           class="w-full flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
          Tous les voir
        </a>
      </div>
    </div>
  </div>
</section>
