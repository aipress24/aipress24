{% extends "wip/layout/_base.j2" %}

{% block body_content %}

  <div class="mt-6">
    <ul role="list" class="mt-3 grid grid-cols-1 gap-4 lg:grid-cols-2" x-max="1">

      {% for item in items %}
        <li class="relative col-span-1 flex rounded-md shadow-sm">
          <a href="{{ item.href }}"
              class="flex-shrink-0 flex items-center justify-center w-16 {{ item.color }}
                text-white text-sm font-medium rounded-l-md">
            {{ item.nickname }}
          </a>

          <div
              class="flex flex-1 items-center justify-between truncate rounded-r-md border-t border-r border-b border-gray-200 bg-white">
            <a href="{{ item.href }}" class="flex-1 truncate px-4 py-2 text-sm">
              <span class="font-medium text-gray-900 hover:text-gray-600">
                {{ item.label }}
              </span>
              <p class="text-gray-500">{{ item.count }} élément(s)</p>
            </a>
            {# {{ component("dropdown-menu") }} #}
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>

{% endblock %}
