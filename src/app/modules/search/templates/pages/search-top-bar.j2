<form>
  <div class="flex">
    <label for="search-qs" class="mb-2 text-sm font-medium text-gray-900 sr-only">Rechercher</label>

    <div class="rounded-l-lg relative w-full">
      <input type="search" id="search-qs" name="qs"
             class="block p-2.5 w-full z-20 text-sm text-gray-900 bg-white rounded-lg border-l-2 border border-gray-300 focus:ring-blue-500 focus:border-blue-500"
             placeholder="Rechercher dans les informations du site" required value="{{ qs }}">
      <button type="submit"
              class="absolute top-0 right-0 p-2.5 text-sm font-medium text-white bg-blue-700 rounded-r-lg border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300">

        {{ icon("magnifying-glass", class="w-5 h-5") }}

      </button>
    </div>
  </div>
</form>
