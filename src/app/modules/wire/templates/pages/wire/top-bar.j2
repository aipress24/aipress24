          class="inline-flex items-center rounded text-sm font-medium text-gray-600 bg-gray-200 my-1 py-1 px-2">
        <span class="">{{ filter.id }}: {{ filter.label }}</span>
        {% set action = {'action': 'remove', 'id': filter.id, 'value': filter.label} %}
