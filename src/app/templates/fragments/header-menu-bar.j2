<nav class="container px-4 sm:px-6 lg:px-8 border-b border-gray-200 bg-white">
  <div class="">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <a hx-boost="true" href="/"><img
              class="block lg:hidden h-8 w-auto"
              src="/static/img/aipress24-picto.png"
              alt="AiPRESS24"><img
              class="hidden lg:block h-8 w-auto"
              src="/static/img/aipress24-logo-small.png" alt="AiPRESS24"></a>
        </div>

        <div class="hidden sm:-my-px sm:ml-6 sm:flex sm:space-x-8">
          {% for item in menus.main %}
            {% if item.active %}
              {% set class="border-red-500 border-b-2" %}
            {% else %}
              {% set class="" %}
            {% endif %}
            <a
                hx-boost="true"
                href="{{ item.url }}"
                class="uppercase tooltip tooltip-bottom text-gray-900 inline-flex items-center px-1 pt-1 text-sm font-semibold {{ class }}"
                aria-current="page" data-tip="{{ item.tooltip }}"
            >{{ item.label }}</a>
          {% endfor %}
        </div>

      </div>

      <div class="flex-1 flex items-center justify-center px-2 lg:ml-6 lg:justify-end">
        <div class="max-w-lg w-full lg:max-w-xs"><label for="search" class="sr-only">Search</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              {{ icon("magnifying-glass", type="outline", class="h-5 w-5") }}
            </div>
            <form action="/search/">
              <input id="qs" name="qs"
                     class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 sm:text-sm"
                     placeholder="Rechercher" type="search">
            </form>
          </div>
        </div>
      </div>

      {% include "fragments/header-menu-dropdowns.j2" %}
    </div>
  </div>
</nav>
