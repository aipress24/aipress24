<div
    class="sm:col-span-{{ field.width }}"
    x-data="imageViewer()"
>
  <label for="{{ field.id }}" class="dui-label">
    <span class="aui-label-text">{{ field.label }}</span>
  </label>

  <div
      class="flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">

    <div>
      <template x-if="imageUrl">
        <img
            :src="imageUrl"
            class="object-cover rounded border border-gray-200 max-w-full"
        >
      </template>

      <template x-if="!imageUrl">
        <svg
            class="mx-auto h-12 w-12 text-gray-400"
            stroke="currentColor"
            fill="none" viewBox="0 0 48 48"
            aria-hidden="true">
          <path
              d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02"
              stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </template>

      <div class="text-sm text-gray-600 text-center">
        <label
            for="{{ field.id }}"
            class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">
          <span class="dui-btn dui-btn-primary dui-btn-sm">Téléverser</span>
          <input
              id="{{ field.id }}" name="{{ field.id }}"
              type="file"
              class="sr-only"
              accept="image/*"
              @change="fileChosen">
        </label>
        <p class="text-xs text-gray-500">PNG, JPG, GIF jusqu'à 10Mo</p>
      </div>
    </div>
  </div>
</div>
